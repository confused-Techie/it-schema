@prefix : <https://it-schema.com/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <https://schema.org> .

:ProductInstance a rdfs:Class ;
  rdfs:label "ProductInstance" ;
  rdfs:comment "A unique singular instance of a defined product." ;
  rdfs:subClassOf schema:Product .

:asset a rdf:Property ;
  rdfs:label "asset" ;
  rdfs:comment "Asset number or identifier from this specific product instance." ;
  rdfs:domain :ProductInstance ;
  rdfs:range schema:Text .

:serial a rdf:Property ;
  rdfs:label "serial" ;
  rdfs:comment "Serial number for this product instance." ;
  rdfs:domain :ProductInstance ;
  rdfs:range schema:Text .

:location a rdf:Property ;
  rdfs:label "location" ;
  rdfs:comment "The current location of the product instance." ;
  rdfs:domain :ProductInstance ;
  rdfs:range schema:Place .

:ComputeDevice a rdfs:Class ;
  rdfs:label "ComputeDevice" ;
  rdfs:comment """A singular device that does some type of computing. This could
be a switch, laptop, desktop, access point, server, monitor, etc. More specific
types could be used if an available schema fits, otherwise this is a generic
catch-all device that can apply to a huge range of devices.
""" ;
  rdfs:subClassOf :ProductInstance .

:AccessPoint a rdfs:Class ;
  rdfs:label "AccessPoint" ;
  rdfs:comment "An access-point device that provides wireless network access to clients." ;
  rdfs:subClassOf :ComputeDevice .

:NetworkSwitch a rdfs:Class ;
  rdfs:label "NetworkSwitch" ;
  rdfs:comment "A networking switch that provides wired network access to clients or servers." ;
  rdfs:subClassOf :ComputeDevice .

:PersonalComputer a rdfs:Class ;
  rdfs:label "PersonalComputer" ;
  rdfs:comment "A personal computer device, generally used by clients or end-users." ;
  rdfs:subClassOf :ComputeDevice .

:deviceClass a rdf:Property ;
  rdfs:label "deviceClass" ;
  rdfs:comment "" .
  
:hardware a rdf:Property ;
  rdfs:label "hardware" ;
  rdfs:comment "A list of hardware that a compute device has." ;
  rdfs:domain :ComputeDevice ;
  rdfs:range :ComputeHardware .

:ComputeHardware a rdfs:Class ;
  rdfs:label "ComputeHardware" ;
  rdfs:comment "The basis of computer hardware for any ComputeDevice." ;
  rdfs:subClassOf schema:Thing .

:HardwareStatus a rdfs:Class ;
  rdfs:label "HardwareStatus" ;
  rdfs:comment "Status of a compute hardware device." ;
  rdfs:subClassOf schema:StatusEnumeration .

:Active a :HardwareStatus ;
  rdfs:label "Active" ;
  rdfs:comment "The device is enabled and in use." .

:Enabled a :HardwareStatus ;
  rdfs:label "Enabled" ;
  rdfs:comment "The device is enabled, but not currently in use." .

:Disabled a :HardwareStatus ;
  rdfs:label "Disabled" ;
  rdfs:comment "The device is non-functional." .

:operatingSystem a rdf:Property ;
  rdfs:label "operatingSystem" ;
  rdfs:comment "The operating system of the device." ;
  rdfs:domain :ComputeDevice ;
  rdfs:range :OperatingSystemEnumeration .

:OperatingSystemEnumeration a rdfs:Class ;
  rdfs:label "OperatingSystemEnumeration" ;
  rdfs:comment "The platform's operating system." ;
  rdfs:subClassOf schema:Enumeration .

:Windows a :OperatingSystemEnumeration ;
  rdfs:label "Windows" .

:Linux a :OperatingSystemEnumeration ;
  rdfs:label "Linux" .

:macOS a :OperatingSystemEnumeration ;
  rdfs:label "macOS" .

:Android a :OperatingSystemEnumeration ;
  rdfs:label "Android" .

:iOS a :OperatingSystemEnumeration ;
  rdfs:label "iOS" .

:iPadOS a :OperatingSystemEnumeration ;
  rdfs:label "iPadOS" .
